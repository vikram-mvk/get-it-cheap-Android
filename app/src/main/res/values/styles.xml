<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GlobalStyle">
        <item name="android:fontFamily">@font/font_primary</item>
        <item name="android:background">@color/primaryBackground</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="GetItCheapButton">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="GetItCheapNavBar">
        <item name="android:background">@color/primaryLabel</item>
    </style>

    <style name="GetItCheapTextView">
        <item name="android:fontFamily">@font/font_primary</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:ellipsize">end</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLength">255</item>
    </style>

    <style name="GetItCheapTextView.Center">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="GetItCheapTextView.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="GetItCheapLabel" parent="GetItCheapTextView">
        <item name="android:textColor">@color/primaryLabel</item>
    </style>

    <style name="GetItCheapTextView.marquee">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">2</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:src">@color/primaryText</item>
    </style>


    <style name="GetItCheapNavBarButton">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:button">@null</item>
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:drawableTop">@drawable/icon_navbar_items</item>
        <item name="itemRippleColor">@color/mtrl_bottom_nav_colored_ripple_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="GetItCheapTextInput">
        <item name="android:fontFamily">@font/font_primary</item>
        <item name="android:maxLength">255</item>
    </style>

    <style name="GetItCheapCheckBox">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="GetItCheapTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Widget.Theme.GetItCheap.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.GetItCheap.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>