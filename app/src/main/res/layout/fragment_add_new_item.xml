<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        tools:context=".AddNewItemFragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item_name_input_layout"
        style="@style/GetItCheapTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_name"
        app:textInputLayoutFocusedRectEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_primary"
                app:textInputLayoutFocusedRectEnabled="true"
                android:maxLength="50"
                />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/description_input_layout"
        style="@style/GetItCheapTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description"
        app:textInputLayoutFocusedRectEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:lines="3"
            android:fontFamily="@font/font_primary"
            app:textInputLayoutFocusedRectEnabled="true"
            android:maxLength="255"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_background"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:weightSum="1"
        >
        <com.google.android.material.textview.MaterialTextView
            style="@style/GetItCheapTextView"
            android:id="@+id/category_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#7B7B7B"
            android:text="@string/category"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.6"
            />
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="5dp"
            />

</LinearLayout>
      <LinearLayout
          android:id="@+id/item_type_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@drawable/border_background"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:weightSum="1"
          >

        <com.google.android.material.textview.MaterialTextView
            style="@style/GetItCheapTextView"
            android:id="@+id/item_type_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#7B7B7B"
            android:text="@string/item_type"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.7"
            />
        <RadioGroup
            android:id="@+id/item_type_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:useMaterialThemeColors="true"
            app:buttonTint="@color/primaryButton"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.3"
            >
            <com.google.android.material.radiobutton.MaterialRadioButton
                style="@style/GetItCheapTextView"
                android:id="@+id/item_type_rent"
                android:fontFamily="@font/font_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/for_rent"
                android:checked="true"
                />
            <com.google.android.material.radiobutton.MaterialRadioButton
                style="@style/GetItCheapTextView"
                android:id="@+id/item_type_sale"
                android:fontFamily="@font/font_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/for_sale"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="1dp"
                />
        </RadioGroup>
  </LinearLayout>
   <LinearLayout
       android:id="@+id/rental_basis_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:background="@drawable/border_background"
       android:weightSum="1"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       >
       <com.google.android.material.textview.MaterialTextView
           style="@style/GetItCheapTextView"
           android:id="@+id/rental_basis_label"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#7B7B7B"
           android:text="@string/rental_basis"
           android:layout_weight="0.6"
           android:layout_gravity="center_vertical"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="1dp"
           />
       <androidx.appcompat.widget.AppCompatSpinner
           style="@style/GetItCheapTextView"
           android:id="@+id/rental_basis_spinner"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:autofillHints="Select Rental Type"
           android:backgroundTint="#7B7B7B"
           android:layout_weight="0.4"
           android:layout_marginStart="25dp"
           android:layout_marginEnd="5dp"
           />
</LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/price_input_layout"
            style="@style/GetItCheapTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/price"
            app:textInputLayoutFocusedRectEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/price_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_primary"
                app:textInputLayoutFocusedRectEnabled="true"
                android:inputType="numberDecimal"
                android:maxLength="5"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            style="@style/GetItCheapTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_background"
            >
            <fragment android:id="@+id/address_places_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/contact_input_layout"
            style="@style/GetItCheapTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contact_information"
            app:textInputLayoutFocusedRectEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contact_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_primary"
                app:textInputLayoutFocusedRectEnabled="true"
                android:maxLength="100"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            style="@style/GetItCheapTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLength="100"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/upload_image"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/font_primary"
            android:text="@string/upload_image"
            app:backgroundTint="@android:color/holo_green_dark"
            app:cornerRadius="10dp"
            />

        <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_your_item"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/font_primary"
        android:text="@string/post_your_item"
        app:backgroundTint="@color/primaryButton"
        app:cornerRadius="10dp"
        />
</LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</ScrollView>