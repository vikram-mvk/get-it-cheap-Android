<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity"
    style="@style/GlobalStyle"
    >

    <FrameLayout
        android:id="@+id/base_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <RadioGroup
        style="@style/GetItCheapNavBar"
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/nav_button_for_rent"
            style="@style/GetItCheapNavBarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Rent"
            />
        <RadioButton
            android:id="@+id/nav_button_for_sale"
            style="@style/GetItCheapNavBarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Sale"
            />
        <RadioButton
            android:id="@+id/nav_button_account"
            style="@style/GetItCheapNavBarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>